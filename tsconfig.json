{
    "compilerOptions": {
        "noImplicitAny": false,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": false,
        "jsx": "react",
        "lib": ["es6"],
        "moduleResolution": "node",
        "noEmit": false,
        "strict": true,
        "target": "esnext",
        "baseUrl": "./src",
        "paths": {
            "@/*": ["./*"],
            "@roqet/*": ["./roqet/*"],
            "@common/*": ["./common/*"]
        },
        "typeRoots": [
            "node_modules/@types",
            "./src/typings"
        ]
    },
    "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js", "__tests__"]
}
